<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vora Films | Premium Indian Wedding Photography</title>
    
    <!-- SEO Meta Tags -->
    <meta name="description" content="Vora Films - Award-winning Indian wedding photography. Capturing your special moments with tradition and modernity across India.">
    <meta name="keywords" content="Indian wedding photography, Mumbai photographer, Delhi wedding, traditional photography, candid shots, wedding albums">
    <meta name="author" content="Vora Films">
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="Vora Films | Premium Indian Wedding Photography">
    <meta property="og:description" content="Capturing life's most precious moments with artistry and passion across India.">
    <meta property="og:type" content="website">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    <!-- Animate CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    @await RenderSectionAsync("Head", required: false)
</head>
<body>
    <!-- WhatsApp Floating Button -->
    <a href="https://wa.me/919876543210?text=Hi%20Vora%20Films,%20I%20would%20like%20to%20inquire%20about%20photography%20services" 
       class="whatsapp-float" target="_blank">
        <i class="fab fa-whatsapp"></i>
    </a>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top custom-navbar">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <img src="/images/logo.png" alt="Vora Films" height="40" class="d-inline-block align-text-top me-2">
                Vora Films
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">About Us</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="servicesDropdown" role="button" data-bs-toggle="dropdown">
                            Services
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Home" asp-action="Services">All Services</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#wedding">Wedding Photography</a></li>
                            <li><a class="dropdown-item" href="#prewedding">Pre-Wedding Shoots</a></li>
                            <li><a class="dropdown-item" href="#portrait">Portrait Sessions</a></li>
                            <li><a class="dropdown-item" href="#commercial">Commercial Work</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Portfolio">Portfolio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="IndianWeddings">Indian Weddings</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                    </li>
                </ul>
                <div class="d-flex">
                    <a href="tel:+919876543210" class="btn btn-outline-light me-2">
                        <i class="fas fa-phone me-1"></i> Call Now
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Enhanced Footer -->
    <footer class="bg-dark text-light pt-5">
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-4">
                    <div class="footer-brand mb-3">
                        <img src="/images/logo-white.png" alt="Vora Films" height="40" class="me-2">
                        <span class="h5">Vora Films</span>
                    </div>
                    <p class="mb-3">Capturing India's most beautiful moments with passion, tradition, and artistic excellence since 2012.</p>
                    <div class="social-links">
                        <a href="#" class="text-light me-3"><i class="fab fa-instagram fa-lg"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-facebook fa-lg"></i></a>
                        <a href="#" class="text-light me-3"><i class="fab fa-youtube fa-lg"></i></a>
                        <a href="#" class="text-light"><i class="fab fa-pinterest fa-lg"></i></a>
                    </div>
                </div>
                <div class="col-lg-2">
                    <h5 class="mb-3">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a asp-controller="Home" asp-action="Index" class="text-light">Home</a></li>
                        <li class="mb-2"><a asp-controller="Home" asp-action="About" class="text-light">About</a></li>
                        <li class="mb-2"><a asp-controller="Home" asp-action="Services" class="text-light">Services</a></li>
                        <li class="mb-2"><a asp-controller="Home" asp-action="Portfolio" class="text-light">Portfolio</a></li>
                        <li class="mb-2"><a asp-controller="Home" asp-action="Contact" class="text-light">Contact</a></li>
                    </ul>
                </div>
                <div class="col-lg-3">
                    <h5 class="mb-3">Services</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#wedding" class="text-light">Wedding Photography</a></li>
                        <li class="mb-2"><a href="#prewedding" class="text-light">Pre-Wedding Shoots</a></li>
                        <li class="mb-2"><a href="#engagement" class="text-light">Engagement</a></li>
                        <li class="mb-2"><a href="#portrait" class="text-light">Portrait Photography</a></li>
                        <li class="mb-2"><a href="#commercial" class="text-light">Commercial Photography</a></li>
                    </ul>
                </div>
                <div class="col-lg-3">
                    <h5 class="mb-3">Contact Info</h5>
                    <div class="contact-info">
                        <p class="mb-2"><i class="fas fa-map-marker-alt me-2"></i> 123 Studio Lane, Bandra West, Mumbai 400050</p>
                        <p class="mb-2"><i class="fas fa-phone me-2"></i> +91 98765 43210</p>
                        <p class="mb-2"><i class="fas fa-envelope me-2"></i> hello@vorafilms.com</p>
                        <p class="mb-0"><i class="fas fa-clock me-2"></i> Mon-Sat: 10AM - 7PM</p>
                    </div>
                </div>
            </div>
            <hr class="my-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2024 Vora Films Photography. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">Proudly serving across India</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>